{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./build",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/root/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@lib/*": ["src/lib/*"],
      "@modules/*": ["src/modules/*"],
      "@app/*": ["src/app/*"],
      "@styles/*": ["src/styles/*"],
      "@assets/*": ["src/app/assets/*"],
      "@icons/*": ["src/app/assets/icons/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
