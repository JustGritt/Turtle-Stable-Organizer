---
const { title, link, value, placeholder, prop } = Astro.props
import QuestionIcon from '@icons/Question.astro'
---
<div class="flex items-center justify-between bg-white dark:bg-gray-800">
    <div class="flex items-start flex-col w-full gap-2">
        <span class="flex gap-2 text-md font-bold text-gray-900 dark:text-white">{ title }
            { link ? <a href={ link } target="_blank" class="text-blue-500 dark:text-blue-400"><QuestionIcon classes="w-5 h-5" /></a> : null }
        </span>
        <input id={ title.replaceAll(" ", "-").toLowerCase() } class="block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400" type="text" data-prop={prop} placeholder={ placeholder } value={ value }>
    </div>
</div>